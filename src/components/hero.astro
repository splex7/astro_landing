---
import { Image } from "@astrojs/image/components";
import heroImage from "assets/items.png";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon";
---

<main
  class="grid lg:grid-cols-2 place-items-top pt-16 pb-8 md:pt-8 mb-auto min-h-screen">
  <div class="py-6 md:order-1 block">
    <h1 class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight">
      Industry Cloud for Commodity Trading
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      Make your bunkering process easier and painless with Sealion
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3"></div>
  </div>
  <div class="py-6 md:order-2 block">
    <Image
      src={heroImage}
      alt="Commodities in the air"
      loading="eager"
      format="avif"
    />
  </div>
</main>
